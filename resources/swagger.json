{
  "openapi": "3.0.0",
  "info": {
    "title": "SOMATICO - API de Controle de Atividades Online para Música",
    "version": "1.0.0",
    "description": "API para registro de professores, alunos, aulas, atividades e chat, com autenticação JWT."
  },
  "servers": [
    { "url": "http://localhost:3000" }
  ],
  "paths": {
    "/api/professor/register": {
      "post": {
        "summary": "Registrar professor",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProfessorInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Professor registrado com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Professor" }
              }
            }
          },
          "400": { "description": "Email já cadastrado" }
        }
      }
    },
    "/api/aluno/register": {
      "post": {
        "summary": "Registrar aluno",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AlunoInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Aluno registrado com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Aluno" }
              }
            }
          },
          "400": { "description": "Email já cadastrado" }
        }
      }
    },
    "/api/login": {
      "post": {
        "summary": "Login de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginInput" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LoginResponse" }
              }
            }
          },
          "400": { "description": "Role inválido" },
          "401": { "description": "Credenciais inválidas" }
        }
      }
    },
    "/api/aulas": {
      "post": {
        "summary": "Professor cria aula",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AulaInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Aula criada",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Aula" }
              }
            }
          },
          "403": { "description": "Acesso negado" }
        }
      },
      "get": {
        "summary": "Aluno consulta suas aulas",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de aulas do aluno",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Aula" }
                }
              }
            }
          }
        }
      }
    },
    "/api/aulas/{aulaId}/atividades": {
      "post": {
        "summary": "Professor adiciona atividade à aula",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "aulaId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AtividadeInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Atividade criada",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Atividade" }
              }
            }
          },
          "403": { "description": "Acesso negado" },
          "404": { "description": "Aula não encontrada" }
        }
      }
    },
    "/api/mensagens": {
      "post": {
        "summary": "Enviar mensagem entre professor e aluno",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MensagemInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Mensagem enviada",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Mensagem" }
              }
            }
          }
        }
      }
    },
    "/api/mensagens/{outroId}": {
      "get": {
        "summary": "Listar mensagens entre professor e aluno",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "outroId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de mensagens",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Mensagem" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ProfessorInput": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "email": { "type": "string" },
          "senha": { "type": "string" }
        },
        "required": ["nome", "email", "senha"]
      },
      "Professor": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nome": { "type": "string" },
          "email": { "type": "string" }
        }
      },
      "AlunoInput": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "email": { "type": "string" },
          "senha": { "type": "string" }
        },
        "required": ["nome", "email", "senha"]
      },
      "Aluno": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nome": { "type": "string" },
          "email": { "type": "string" }
        }
      },
      "LoginInput": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "senha": { "type": "string" },
          "role": { "type": "string", "enum": ["professor", "aluno"] }
        },
        "required": ["email", "senha", "role"]
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "token": { "type": "string" }
        }
      },
      "AulaInput": {
        "type": "object",
        "properties": {
          "titulo": { "type": "string" },
          "descricao": { "type": "string" },
          "alunoId": { "type": "integer" }
        },
        "required": ["titulo", "descricao", "alunoId"]
      },
      "Aula": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "titulo": { "type": "string" },
          "descricao": { "type": "string" },
          "alunoId": { "type": "integer" },
          "professorId": { "type": "integer" },
          "atividades": {
            "type": "array",
            "items": { "type": "integer" }
          }
        }
      },
      "AtividadeInput": {
        "type": "object",
        "properties": {
          "descricao": { "type": "string" }
        },
        "required": ["descricao"]
      },
      "Atividade": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "descricao": { "type": "string" },
          "aulaId": { "type": "integer" }
        }
      },
      "MensagemInput": {
        "type": "object",
        "properties": {
          "destinatarioId": { "type": "integer" },
          "texto": { "type": "string" }
        },
        "required": ["destinatarioId", "texto"]
      },
      "Mensagem": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "remetenteId": { "type": "integer" },
          "destinatarioId": { "type": "integer" },
          "texto": { "type": "string" },
          "data": { "type": "string", "format": "date-time" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [{ "bearerAuth": [] }]
}
